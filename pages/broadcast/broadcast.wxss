image {
    width: 100%;
    height: 100%;
}

page {
    height: 100%;
    background-color: #28194a;
    background: #28194a;
    background: -moz-linear-gradient(top, #28194a, #a53f79);
    background: -webkit-gradient(linear, 0 0, 0 bottom, from(#28194a), to(#a53f79));
    background: -o-linear-gradient(top, #28194a, #a53f79);
}

.broadcast-wrapper {
    padding: 0 30rpx;
}

.broadcast-wrapper .item {
    display: flex;
    padding: 20rpx;
}

.broadcast-wrapper .item .avatar {
    width: 75rpx;
    height: 75rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.broadcast-wrapper .broadcast-item {
    position: relative;
    flex: 1;
    margin-left: 20rpx;
    border-radius: 15rpx;
}

.broadcast-wrapper .broadcast-item::before {
    content: "";
    display: block;
    position: absolute;
    left: -10rpx;
    top: 28rpx;
    width: 20rpx;
    height: 20rpx;
    z-index: 9;
    background-color: #fff;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
}

.broadcast-wrapper .broadcast-item .box {
    background-color: #fff;
    border-radius: 10rpx;
    padding: 10rpx;
}

.broadcast-wrapper .broadcast-item .img-box {
    width: 260rpx;
    height: 260rpx;
}
.broadcast-wrapper .broadcast-item .banner-box{
    width: 100%;
    height: 260rpx;
}

.broadcast-wrapper .broadcast-item .img-box image,.broadcast-wrapper .broadcast-item .banner-box {
    border-radius: 10rpx;
}
.broadcast-wrapper .goods-item{
    padding: 10rpx;
}
.broadcast-wrapper .goods-item .img{
    width: 162rpx;
    height: 162rpx;
}
.broadcast-wrapper .goods-item .goods-info .title {
    margin-bottom: 0;
}
.broadcast-wrapper .goods-item .goods-info .other{
    margin-top: 0;
}

