page{
    height: 100%;
}
.ranking-wrapper{
    padding-top: 75rpx;
    box-sizing: border-box;
    height: 100%;
}
.ranking-title{
    display: flex;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    text-align: center;
    height: 74rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ebebeb;
    z-index: 99;
}
.ranking-title .item{
    flex: 1;
    padding: 16rpx 0;
    font-size: 24rpx;
    line-height: 40rpx;
    border-bottom: 2rpx solid #fff;
    color: #666;
}
.ranking-title .item.act{
    color: #f05077;
    border-bottom-color: #f05077;
}

.ranking-box .box{
    padding: 0 30rpx;
}

.ranking-item{
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    font-size: 24rpx;
    border-bottom: 1px solid #eee;
}
.ranking-item .num{
    width: 100rpx;
    text-align: center;
}
.ranking-item .avatar{
    width: 75rpx;
    height: 75rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
}
.ranking-item .avatar image{
    width: 100%;
    height: 100%;
}
.ranking-item .item{
    flex: 1;
    text-align: center;
}